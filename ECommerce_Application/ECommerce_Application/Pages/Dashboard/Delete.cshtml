                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.SKU)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.SKU)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Breed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Breed)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Age)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Age)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.SuperPower)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.SuperPower)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Image)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Image)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.IsFeature)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.IsFeature)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Product.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a style="color:white" asp-page="./Index">Back to List</a>
            </form>
        </div>
        </main>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
