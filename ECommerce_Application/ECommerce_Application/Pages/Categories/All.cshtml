@page
@model ECommerce_Application.Pages.Categories.AllModel
@{
    ViewData["Title"] = "All";
    Layout = "_Layout";

}

    <body>

        <section style='width: 75%; display: flex; flex-flow: row wrap; margin: 0 auto;'>
            @if(Model.Products != null)
            {

            @foreach (var item in @Model.Products)
            {
                string image = "";
                @if (@item.Image == null)
                {
                    image = "https://i.ytimg.com/vi/jzUlYLC1DVA/maxresdefault.jpg";
                }
                @if (@item.Image != null)
                {
                    image = @item.Image;
                }
                <section style='width: 150px; margin-bottom: 20px; margin-right: 40px;'>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"><img style='width: 150px; height: 125px;' src="@image" alt="image" /></a><br />
                    <h1>Name: @item.Name</h1>
                    <h3>Price: @item.Price</h3>

                </section>
            }
            }
        </section>

    </body>
