@page
@model ECommerce_Application.Pages.Categories.ReceiptModel
@{
    ViewData["Title"] = "Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Receipt</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Name
            </th>
            <th>
                Product Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order.Cart.CartItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                @{
                    var price = item.Product.Price * item.Quantity;
                }
                <td>
                    @price
                </td>
            </tr>
        }
        <tr>
            <td>
            </td>
            <td>
                Total:

            </td>
            <td>
                @Model.Order.Cart.Price
            </td>
        </tr>

    </tbody>
</table>

<h1>Billing Information:</h1>

<table class="table">
    <tbody>
        <tr>
            <td>
                E-Mail
            </td>
            <td>
                @Model.Order.UserEmail
            </td>
        </tr>
        <tr>
            <td>
                First Name
            </td>
            <td>
                @Model.Order.FirstName
            </td>
        </tr>
        <tr>
            <td>
                Last Name
            </td>
            <td>
                @Model.Order.LastName
            </td>
        </tr>
        <tr>
            <td>
                Address
            </td>
            <td>
                @Model.Order.Address
            </td>
        </tr>
        <tr>
            <td>
                City
            </td>
            <td>
                @Model.Order.City
            </td>
        </tr>
        <tr>
            <td>
                State
            </td>
            <td>
                @Model.Order.State
            </td>
        </tr>
        <tr>
            <td>
                ZipCode
            </td>
            <td>
                @Model.Order.ZipCode
            </td>
        </tr>
        <tr>
            <td>
                Order Number
            </td>
            <td>
                @Model.Order.OrderNumber
            </td>
        </tr>
        <tr>
            <td>
                Amount Charged
            </td>
            <td>
                @Model.Order.Cart.Price
            </td>
        </tr>

    </tbody>
</table>

