@page
@model ECommerce_Application.Pages.Account.IndexModel
@using Microsoft.AspNetCore.Identity;
@using ECommerce_Application.Models;
@inject SignInManager<Customer> SignInManager
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>




    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Zip
                </th>


            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "FirstName")
                </td>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "LastName")
                </td>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "Address")
                </td>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "City")
                </td>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "State")
                </td>
                <td>
                    @User.Claims.FirstOrDefault(x => x.Type == "Zip")
                </td>


                <td>
                </td>
            </tr>

            <tr>
            </tr>

        </tbody>
    </table>




    <div style=" display: block; text-align: center; margin-left: 500px; margin-right: 500px;">
        <form method="post" style="text-align:center; display: inline-block;  margin-left: auto;   margin-right: auto;">
            <label asp-for="@Model.AccountPage.FirstName"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.FirstName" /><br />

            <label asp-for="@Model.AccountPage.LastName"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.LastName" /><br />

            <label asp-for="@Model.AccountPage.Address"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.Address" /><br />

            <label asp-for="@Model.AccountPage.City"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.City" /><br />

            <label asp-for="@Model.AccountPage.State"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.State" /><br />

            <label asp-for="@Model.AccountPage.ZipCode"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.ZipCode" /><br />


            <label asp-for="@Model.AccountPage.Email"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.Email" /><br />

            <label asp-for="@Model.AccountPage.Password"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.Password" /><br />

            <label asp-for="@Model.AccountPage.ConfirmPassword"></label>
            <input style="width: 100%;" asp-for="@Model.AccountPage.ConfirmPassword" /><br />

            <button class="btn btn-outline-warning" type="submit">SUBMIT</button>
        </form>
    </div>
</body>
</html>