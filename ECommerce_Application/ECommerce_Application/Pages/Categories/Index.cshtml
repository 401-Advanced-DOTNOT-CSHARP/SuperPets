@page
@model ECommerce_Application.Pages.Categories.IndexModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1 style="text-align: center">SUPER DOG CART </h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CartItem[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartItem[0].Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartItem[0].Cart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartItem[0].Cart.Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItem)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cart.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cart.Price)
                </td>
                <td>
                    <a class="btn btn-danger" style="color:white" asp-page="./Edit" asp-route-id="@item.CartId">Edit</a>
                    <a class="btn btn-danger" style="color:white" asp-page="./Delete" asp-route-id="@item.CartId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>


</html>
