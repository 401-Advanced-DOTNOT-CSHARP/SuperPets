    <body>
        <h1 style="margin-bottom: 1em; margin-top:10vh; text-align: center;">@Model.Product.Name | Price: $@Model.Product.Price | Category: @Model.Product.Category </h1><br>


        @if (Model.IsAvailable)
        {
            <h1>Quantity Entered is larger than available.</h1>
        }
        <div class="container bootdey">
            <div class="col-md-12">
                <section class="panel">
                    <div class="panel-body">
                        <div class="col-md-6">
                            <div class="pro-img-details">
