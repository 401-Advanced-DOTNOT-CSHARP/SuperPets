@page
@model ECommerce_Application.Pages.Categories.AllModel
@{
    ViewData["Title"] = "All";
    Layout = "_Layout";

}
<head>
    <link rel="stylesheet" href="~/Styles/album.css" type="text/css" />

</head>

<body>
    <main role="main" style="margin-top:10vh;">
        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">
                    @if (Model.Products != null)
                    {

                        @foreach (var item in @Model.Products)
                        {

                            string image = "";
                            @if (@item.Image == null)
                            {
                                image = "https://i.ytimg.com/vi/jzUlYLC1DVA/maxresdefault.jpg";
                            }
                            @if (@item.Image != null)
                            {
                                image = @item.Image;
                            }
                            <div class="col-md-4">
                                <div class="card mb-4 box-shadow">
                                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-text">@item.Description</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline-secondary"><a asp-page="/Categories/Product" asp-route-id="@item.Id"> View</a></button>
                                            </div>
                                            <small class="text-muted">@item.Name Qty: @item.Quantity $@item.Price </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </main>
    <script src="~/JS/holder.min.js"></script>

</body>


